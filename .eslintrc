{
	"extends": [
		"eslint:recommended"
	],
	"env": {
		"es6": true,
		"node": true
	},
	"parserOptions": {
		"sourceType": "module"
	},
	"ignorePatterns": ["node_modules/"],
	"rules": {
		"eol-last": [
			2,
			"always"
		],
		"indent": [
			2,
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"no-trailing-spaces": 2,
		"no-var": 2,
		"prefer-const": 2,
		"quotes": [
			2,
			"single",
			{
				"allowTemplateLiterals": true
			}
		],
		"semi": [
			2,
			"never"
		]
	}
}
